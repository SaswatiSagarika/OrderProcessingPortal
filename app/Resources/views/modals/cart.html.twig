<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                 <h4 class="modal-title" id="myModalLabel">Cart</h4>

            </div>
            <div class="modal-body" id="modalbody">
            <div class="alert-message" id="modal-message">
     
            </div>
            <form method="post"
            action="" id="myform">
            <table id="mycarttable">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Cost</th>
                    <th>Action</th>
                </tr>

                <tbody id="mytablebody">
                </tbody>
            <table>
            </div>
            <div class="modal-footer">
                <div class="dropdown text-left">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Select Customer
                  </button>
                  
                  <ul class="dropdown-menu scrollable-menu" aria-labelledby="dropdownMenu1">
                    {% for cust in customer %}
                    <li><a href="#" data-value="action" id="{{cust.value}}">{{cust.name}}</a></li>
                    {% endfor %}
                    </ul>
                  
                </div>
                <div class="text-right">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary place-order">Place Order</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/register.css" />
  {% endblock %} 
{% block body %}
<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Please enter your otp </h3>
			 			</div>
			 			<div class="panel-body">
		 				<div class="alert alert-success alert-dismissible" role="alert">
				   		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					   			<span aria-hidden="true">&times;</span></button>
							{{response.message}}
						</div>
			    		<form id="registerSubmit">
			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			                			<input type="text" name="otp" id="otp" class="form-control" placeholder="otp">
			    					</div>
			    				</div>
			    			</div>
			    			<input type="hidden" name="name" id="name" class="form-control" value={{user.name}}>
			    			<input type="hidden" name="email" id="email" class="form-control" value={{user.email}}>
			    			<input type="button" id="verify_otp" value="verify otp" class="btn btn-info btn-block">
			    		
			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>

{% endblock %}
{% block javascripts %}
<script src="/js/app.js"></script>
{% endblock %}